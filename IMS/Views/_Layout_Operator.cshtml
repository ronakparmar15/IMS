

@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Session
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="POS - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, management, minimal, modern,  html5, responsive">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>OPERATOR</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/admin/img/favicon.png">

    <link rel="stylesheet" href="~/admin/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/admin/css/animate.css">

    <link rel="stylesheet" href="~/admin/css/dataTables.bootstrap4.min.css">

    <link rel="stylesheet" href="~/admin/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/admin/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="~/admin/css/style.css">
</head>
<body>
    <div id="global-loader">
        <div class="whirly-loader"> </div>
    </div>

    <div class="main-wrapper">

        <div class="header">

            <div class="header-left active">
                <a href="index.html" class="logo">
                    <img src="~/admin/img/logo.png" alt="">
                </a>
                <a href="index.html" class="logo-small">
                    <img src="~/admin/img/logo-small.png" alt="">
                </a>
                <a id="toggle_btn" href="javascript:void(0);">
                </a>
            </div>

            <a id="mobile_btn" class="mobile_btn" href="#sidebar">
                <span class="bar-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
            </a>

            <ul class="nav user-menu">

                <li class="nav-item">
                    <div class="top-nav-search">
                        <a href="javascript:void(0);" class="responsive-search">
                            <i class="fa fa-search"></i>
                        </a>
                        <form action="#">
                            <div class="searchinputs">
                                <input type="text" placeholder="Search Here ...">
                                <div class="search-addon">
                                    <span><img src="~/admin/img/icons/closes.svg" alt="img"></span>
                                </div>
                            </div>
                            <a class="btn" id="searchdiv"><img src="~/admin/img/icons/search.svg" alt="img"></a>
                        </form>
                    </div>
                </li>





                <li class="nav-item dropdown has-arrow main-drop">
                    <a href="javascript:void(0);" class="dropdown-toggle nav-link userset" data-bs-toggle="dropdown">
                        <span class="user-img">
                            <img src="~/admin/img/profiles/avator1.jpg" alt="">
                            <span class="status online"></span>
                        </span>
                    </a>
                    <div class="dropdown-menu menu-drop-user">
                        <div class="profilename">
                            <div class="profileset">
                                <span class="user-img">
                                    <img src="~/admin/img/profiles/avator1.jpg" alt="">
                                    <span class="status online"></span>
                                </span>
                                <div class="profilesets">
                                    <h5>Operator</h5>
                                    
                                        @if (!string.IsNullOrEmpty(@HttpContextAccessor.HttpContext.Session.GetString("UserName")))
                                        {
                                            <h6 class="text-dark"> Welcome:-@HttpContextAccessor.HttpContext.Session.GetString("UserName") </h6>

                                        }
 

                                </div>
                            </div>
                            <hr class="m-0">
                            <a class="dropdown-item"> <i class="me-2" data-feather="user"></i> My Profile</a>
                            <a class="dropdown-item"><i class="me-2" data-feather="settings"></i>Settings</a>
                            <hr class="m-0">
                            @* <a class="dropdown-item logout pb-0" href="signin.html"><img src="~/admin/img/icons/log-out.svg" class="me-2" alt="img">Logout</a> *@
                            @if (!string.IsNullOrEmpty(@HttpContextAccessor.HttpContext.Session.GetString("UserName")))
                            {

                                <a class="dropdown-item logout pb-0" asp-area="" asp-controller="users" asp-action="Logout"><img src="~/admin/img/icons/log-out.svg" class="me-2" alt="img">LogOut</a>
                            }
                        </div>
                    </div>
                </li>
            </ul>


            <div class="dropdown mobile-user-menu">
                <a href="javascript:void(0);" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item">My Profile</a>
                    <a class="dropdown-item">Settings</a>
                    <a class="dropdown-item" href="signin.html">Logout</a>
                </div>
            </div>

        </div>
    </div>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-inner slimscroll">
            <div id="sidebar-menu" class="sidebar-menu">
                <ul>
                    <li class="active">
                        <a asp-controller="home" asp-action="Index"><img src="~/admin/img/icons/dashboard.svg" alt="img"><span> Dashboard</span> </a>
                    </li>

                    @* <li class="submenu">
                        <a href="javascript:void(0);"><img src="~/admin/img/icons/users1.svg" alt="img"><span> Roles</span> <span class="menu-arrow"></span></a>
                        <ul>
                            <li><a asp-controller="roles" asp-action="Index">Role List</a></li>
                            <li><a asp-controller="roles" asp-action="Create">Add Role </a></li>
                        </ul>
                    </li> *@

                    @* <li class="submenu">
                        <a href="javascript:void(0);"><img src="~/admin/img/icons/users1.svg" alt="img"><span> Users</span> <span class="menu-arrow"></span></a>
                        <ul>
                            <li><a asp-controller="users" asp-action="Index">Users List</a></li>
                            <li><a asp-controller="users" asp-action="Create">New User </a></li>
                        </ul>
                    </li> *@

                    <li class="submenu">
                        <a href="javascript:void(0);"><img src="~/admin/img/icons/users1.svg" alt="img"><span> Suppliers</span> <span class="menu-arrow"></span></a>
                        <ul>
                            <li><a asp-controller="suppliers" asp-action="Index">Suppliers List</a></li>
                            <li><a asp-controller="suppliers" asp-action="Create">New Suppliers </a></li>
                        </ul>
                    </li>
                    <li class="submenu">
                        <a href="javascript:void(0);"><img src="~/admin/img/icons/product.svg" alt="img"><span> Product</span> <span class="menu-arrow"></span></a>
                        <ul>
                            <li><a asp-controller="class" asp-action="Index">Category List</a></li>
                            <li><a asp-controller="class" asp-action="Create">Add Category</a></li>
                            <li><a asp-controller="items" asp-action="Index">Product List</a></li>
                            <li><a asp-controller="items" asp-action="Create">Add Product</a></li>
                        </ul>
                    </li>
                    <li class="submenu">
                        <a href="javascript:void(0);"><img src="~/admin/img/icons/purchase1.svg" alt="img"><span> Purchase</span> <span class="menu-arrow"></span></a>
                        <ul>
                            <li><a asp-controller="purchase" asp-action="Index">Purchase List</a></li>
                            <li><a asp-controller="purchase" asp-action="Create">Add Purchase</a></li>
                        </ul>
                    </li>
                    <li class="submenu">
                        <a href="javascript:void(0);"><img src="~/admin/img/icons/sales1.svg" alt="img"><span> Sales</span> <span class="menu-arrow"></span></a>
                        <ul>
                            <li><a asp-controller="sales" asp-action="Index">Sales List</a></li>
                            <li><a asp-controller="sales" asp-action="Create">New Sales</a></li>
                        </ul>
                    </li>





                    <li class="submenu">
                        <a href="javascript:void(0);"><img src="~/admin/img/icons/places.svg" alt="img"><span> Places</span> <span class="menu-arrow"></span></a>
                        <ul>
                            <li><a asp-controller="states" asp-action="Index">State list</a></li>
                            <li><a asp-controller="states" asp-action="Create">New State </a></li>
                        </ul>
                    </li>



                 @*    <li class="submenu">
                        <a href="javascript:void(0);"><i data-feather="layout"></i> <span> Table </span> <span class="menu-arrow"></span></a>
                        <ul>
                            <li><a href="tables-basic.html">Basic Tables </a></li>
                            <li><a href="data-tables.html">Data Table </a></li>
                        </ul>
                    </li>
 *@
                    <li class="submenu">
                        <a href="javascript:void(0);"><img src="~/admin/img/icons/settings.svg" alt="img"><span> Tax</span> <span class="menu-arrow"></span></a>
                        <ul>

                            <li><a asp-controller="gst" asp-action="Index">Tax Rates List</a></li>
                            <li><a asp-controller="gst" asp-action="Create">Add Tax Rates</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="page-wrapper">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)

    <script src="~/admin/js/jquery-3.6.0.min.js"></script>

    <script src="~/admin/js/feather.min.js"></script>

    <script src="~/admin/js/jquery.slimscroll.min.js"></script>

    <script src="~/admin/js/jquery.dataTables.min.js"></script>
    <script src="~/admin/js/dataTables.bootstrap4.min.js"></script>

    <script src="~/admin/js/bootstrap.bundle.min.js"></script>

    <script src="~/admin/plugins/apexchart/apexcharts.min.js"></script>
    <script src="~/admin/plugins/apexchart/chart-data.js"></script>

    <script src="~/admin/js/script.js"></script>
</body>
</html>