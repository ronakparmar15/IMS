@model IEnumerable<IMS.Models.RoleTb>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PermissionCreateUpdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PermissionDelete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PermissionView)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionCreateUpdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionDelete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionView)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
