@model IEnumerable<IMS.Models.stokes>


@{
    ViewData["Title"] = "report2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Purchase&Sale-Report</h1>


<table class="table">
    <thead>
        <tr>
            <th>Item Id</th>
            <th>Total Purchase Qty</th>
            <th>Total Sales Qty</th>
            <th>Qty In-hand</th>
            <th>Total Purchase(Rs)</th>
            <th>Total Sales(Rs)</th>
            <th>Pending(Rs)</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var entry in Model)
    {
        <tr>
            <td>@entry.ItemId</td>
            <td>@entry.PurchaseQty</td>
            <td>@entry.SalesQty</td>
            <td>@entry.NetQty</td>
            <td>@entry.PurchaseTotal3</td>
            <td>@entry.SalesTotal3</td>
            <td>@entry.NetTotal</td>
        </tr>
    }
    </tbody>
</table>

<a asp-controller="sales" asp-action="DownloadPdf">Generate PDF</a>

