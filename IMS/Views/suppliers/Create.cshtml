@model IMS.Models.SupplierTb

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
<h1>Suppliers</h1>

<h4>Add Supplier</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SupName" class="control-label"></label>
                        <input asp-for="SupName" class="form-control" />
                        <span asp-validation-for="SupName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupAddress" class="control-label"></label>
                        <input asp-for="SupAddress" class="form-control" />
                        <span asp-validation-for="SupAddress" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SupType" class="control-label"></label>
                        <select asp-for="SupType" class="form-control" asp-items="ViewBag.sttype"></select>
                        <span asp-validation-for="SupType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupMobile" class="control-label"></label>
                        <input asp-for="SupMobile" class="form-control" />
                        <span asp-validation-for="SupMobile" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SupGstNumber" class="control-label"></label>
                        <input asp-for="SupGstNumber" class="form-control" />
                        <span asp-validation-for="SupGstNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>